#!/bin/bash

# Add MySQL to PATH
export PATH="/opt/homebrew/opt/mysql@8.0/bin:$PATH"

# Create an alias for easier MySQL access
alias mysql-start='brew services start mysql@8.0'
alias mysql-stop='brew services stop mysql@8.0'
alias mysql-status='brew services list'

echo "âœ… MySQL PATH configured"
echo "Available commands:"
echo "  - mysql-start      Start MySQL service"
echo "  - mysql-stop       Stop MySQL service"
echo "  - mysql-status     Check all services status"
